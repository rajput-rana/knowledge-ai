# OpenAI-compatible API Configuration
EMBEDDING_API_BASE=https://api.openai.com/v1
EMBEDDING_API_KEY=your-embedding-api-key-here
EMBEDDING_MODEL=text-embedding-3-small

CHAT_API_BASE=https://api.openai.com/v1
CHAT_API_KEY=your-chat-api-key-here
CHAT_MODEL=gpt-4o-mini

# Vector Store Configuration
VECTOR_DIMENSION=1536
FAISS_INDEX_PATH=

# Retrieval Configuration
TOP_K=5

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
MAX_CONTEXT_LENGTH=4000

# Prompt Configuration
PROMPT_STYLE=standard
INCLUDE_FEW_SHOT_EXAMPLES=false

# Reasoning Model Configuration (Optional)
REASONING_API_BASE=https://api.openai.com/v1
REASONING_API_KEY=
REASONING_MODEL=o1-preview
ALWAYS_USE_REASONING=false

# Agent Configuration
AGENT_MAX_ITERATIONS=3
ENABLE_AGENTIC_MODE=true

# MCP Configuration
ENABLE_MCP_SERVER=true
MCP_SERVER_PORT=8001
MCP_EXTERNAL_SERVERS=
